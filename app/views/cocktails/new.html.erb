<div class="container">
    <div class="row">
      <div class="col-12 col-md-6 offset-lg-3">
        <div class="bg-white rounded p-3 shadow">
          <h3 class="new-cocktail">Create a new cocktail!</h3>
            <%= simple_form_for @cocktail do |c| %>
              <%= c.input :name %>
              <%= c.input :instruction %>
              <%= c.input :photo, as: :file %>
              <%= c.submit class: 'btn btn-secondary' %>
            <% end %>
        </div>
      </div>
    </div>
</div>
