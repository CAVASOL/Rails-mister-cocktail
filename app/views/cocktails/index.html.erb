<div class="banner vh-100" style="background-image:">
  <form class="search-container" action="/cocktails">
    <input id="searchBar" class="searchbar" name="query" type="text" placeholder="Search Cocktail!" aria-label="Search">
  </form>

  <div class="title">
    <h2 class="title-all">All</h2>
    <h2 class="title-that">that</h2>
    <h2 class="title-cocktail">Cocktail</h2>
  </div>
</div>

<div class="row">
  <div>
    <h5 class="index-subtitle"> Bourbon treasures ( <%= @cocktails.length %> ) </h5>
  </div>
  <div class="samples">
    <% @cocktails.map do |cocktail| %>
      <%= link_to cocktail_path(cocktail), class: "text-dark text-decoration-none" do %>
        <div class="sample-card" data-aos="zoon-in" style="background-image: url('<%= cl_image_path cocktail.photo.key, crop: :fill %>')">
          <p class="name"><%= cocktail.name.titleize %></p>
        </div>
      <% end%>
    <% end %>
  </div>
</div>

<%= render 'shared/footer' %>
