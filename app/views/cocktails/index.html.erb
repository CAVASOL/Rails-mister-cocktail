<div class="banner">
  <div class="title">
    <h2 class="title-top" style="margin-right: 8px;">All</h2> <h2 class="title-top">that</h2>
    <h2 class="title-bottom"> Cocktail </h2>
  </div>

  <form class="search-container" action="/cocktails">
    <input id="searchBar" class="searchbar" name="query" type="text" placeholder="Search Cocktail!" aria-label="Search">
  </form>
</div>

<div class="row">
  <div>
    <h5 class="index-subtitle"> Bourbon treasures ( <%= @cockatils.length %> ) </h5>
  </div>
  <div class="samples">
    <% @cockatils.each do |cocktail| %>
      <%= link_to cocktail_path(cocktail), class: "text-dark text-decoration-none" do %>
        <%= cl_image_tag cocktail.photo.key, height: 140, width: 160, crop: :fill %>
      <% end%>
    <% end %>
  </div>
</div>

<%= render 'shared/footer' %>
