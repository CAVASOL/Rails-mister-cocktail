<div class="login-container">
  <h2>Welcome!</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="login-form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "login-input" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password", class: "login-password-input" } %>
      <div class="dumdum">
        <%= link_to "Forgot your password? Click here!", new_password_path(resource_name), class: "forgot-password" %>
      </div>
      <%= f.input :remember_me,
                  input_html: { class: "login-rememberme-input" },
                  as: :boolean if devise_mapping.rememberable? %>
    </div>
    <div class="login-form-actions">
      <%= f.button :submit, "Log in", class: "login-btn" %>
    </div>
    <div class="signup">
      <%= link_to "Sign up", new_registration_path(resource_name), class: "signup-btn" %>
    </div>
  <% end %>
  <%# <div class="shared-links">
    <%= render "devise/shared/links" %>
  <%# </div> %>
</div>

<%= render "shared/footer" %>
