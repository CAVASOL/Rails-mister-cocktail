<div class="ing-container">
  <div class="new-ingredient-input">
    <%= simple_form_for [@cocktail, @ingredient] do |f| %>
      <%= f.input :name, input_html: { placeholder: "New ingredient?", class: "ing-name" } %>
      <div class="ing-btn">
        <%= f.button :submit, "Done", class: "new-ing-btn" %>
      </div>
    <% end %>
  </div>
</div>

<div class="ing-table">
  <table>
    <thead>
      <th>Ingredient</th>
      <th>Action</th>
    </thead>
    <tbody>
      <% @ingredients.each do |ingredient| %>
        <tr>
          <td><%= ingredient.name %></td>
          <td>
            <%= link_to ingredient_path(ingredient), method: :delete, class: "tablecon-d", data: { confirm: "Are you sure?" } do %>
              <i class="fa-regular fa-trash-can"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


