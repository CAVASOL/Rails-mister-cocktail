<div class="new-comment">
  <h3>New Review</h3>

  <%= simple_form_for [@cocktail, @review] do |f| %>
    <%= f.input :rating, collection: 0..5 %>
    <%= f.input :author %>
    <%= f.input :comment %>
    <%= f.submit class: "btn btn-primary"%>
  <% end %>
</div>
